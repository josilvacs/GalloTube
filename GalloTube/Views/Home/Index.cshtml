@model List<GalloTube.Models.video>
@{
    ViewData["Title"] = "Home";
}

<div class="album py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Tudo sobre o mundo dos Filmes</h1>
    </div>

    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
        @foreach (Video video in Model)
        {            
            <div class="col">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top" width="100%" height="400"
                    src="@video.Image">
                    <div class="card-body">
                        <p class="card-text text-center">@video.Title</p>
                        <div class="d-flex align-items-center mb-2">
                            @foreach (VideoTag genre in video.Tags)
                            {
                                <span class="badge bg-secondary me-2">@Tag.Tags.Name</span>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-body-secondary">@video.HourDuration</small>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>

